@model IEnumerable<HelpdeskApp.Models.Ticket>

@{
    ViewData["Title"] = "Ticket List";
}

<h2>Ticket List</h2>

<a asp-action="Create" class="btn btn-primary">New Ticket</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Id</td>
                <td>@ticket.Title</td>
                <td>@ticket.Status</td>
                <td>
                    <a href="@Url.Action("Details", "Ticket", new { id = ticket.Id })" class="btn btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
