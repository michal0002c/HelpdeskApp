@model IEnumerable<HelpdeskApp.Models.Ticket>

@{
    ViewData["Title"] = "Ticket List";
}

<div class="container-fluid p-4">
    <div class="row">
        <!-- Sidebar nav (np. Moje zgłoszenia) -->
        <div class="col-2">
            <div class="list-group">
                <a class="list-group-item list-group-item-dark active">Moje zgłoszenia</a>
                <a class="list-group-item list-group-item-dark">Zgłoszenia mojej organizacji</a>
            </div>
        </div>

        <!-- Lista zgłoszeń -->
        <div class="col">
            <h4 class="mb-4">Moje zgłoszenia</h4>
            <table class="table table-dark table-hover table-bordered rounded">
                <thead class="table-secondary text-dark">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>
                                @if (item.Status == TicketStatus.New)
                                {
                                    <span class="badge bg-warning text-dark">Open</span>
                                }
                                else if (item.Status == TicketStatus.Closed)
                                {
                                    <span class="badge bg-success">Closed</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">In progress</span>
                                }
                        </td>
                        <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>
                                <a asp-action="Details" asp-controller="Ticket" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light">Details</a>
                            </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


