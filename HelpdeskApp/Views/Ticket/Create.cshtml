@model HelpdeskApp.Models.TicketCreateViewModel

@{
    ViewData["Title"] = "New Ticket";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card bg-dark text-white border-secondary shadow-lg rounded">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Nowe zgłoszenie</h2>

                    <form asp-action="Create" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Tytuł *</label>
                            <input asp-for="Title" class="form-control bg-dark text-white border-secondary rounded" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Treść</label>
                            <textarea asp-for="Description" rows="5" class="form-control bg-dark text-white border-secondary rounded"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-light">
                                <i class="fas fa-arrow-left"></i> Anuluj
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-plus-circle"></i> Utwórz
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
