@{
    ViewData["Title"] = "Zaloguj się";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-dark text-light">
    <div class="card shadow-lg p-4" style="min-width: 400px; background-color: #2c2f33;">
        <div class="text-center mb-3">
            <img src="~/images/logo.png" alt="logo" style="max-height: 80px;" />
            <p class="text-muted">Odważne technologie</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label for="username">Nazwa użytkownika / Email</label>
                <input type="text" name="username" class="form-control bg-dark text-light border-secondary" required />
            </div>

            <div class="form-group mb-3">
                <label for="password">Hasło</label>
                <input type="password" name="password" class="form-control bg-dark text-light border-secondary" required />
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" name="rememberMe" class="form-check-input" />
                <label class="form-check-label">Zapamiętaj mnie</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Zaloguj się</button>

            <div class="text-center mt-3">
                <a href="#">Zapomniałeś hasła?</a> |
                <a href="#">Zarejestruj nowe konto</a>
            </div>
        </form>
    </div>
</div>
