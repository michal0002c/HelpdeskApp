@model HelpdeskApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="text-center mb-3">
        <img src="~/images/logo.png" alt="logo" class="img-fluid mb-2" style="max-height: 80px;" />
        <p class="text-muted">Your HelpDesk</p>
    </div>

    <form asp-action="Login" method="post" class="bg-white text-dark p-4 rounded shadow-sm">
        @if (ViewBag.Error != null)
        {
            <div class="text-danger text-center mb-3">@ViewBag.Error</div>
        }

        <div class="form-group mb-3">
            <label asp-for="Username">Username or Email</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger small"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" name="RememberMe" class="form-check-input" id="rememberMe" />
            <label class="form-check-label" for="rememberMe">Remember me</label>
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-2">Log in</button>

        <div class="text-center">
            <a href="/Account/ForgotPassword" class="text-secondary">Forgot your password?</a>
        </div>
    </form>

    <div class="text-center text-light small mt-4">
        If you’ve contacted our support team before, your account may already exist.<br />
        You can set your password <a href="/Account/ForgotPassword" class="text-info">here</a>.
    </div>

    <div class="text-center mt-3">
        <a href="/Account/Register">Register new account</a> |
        <a href="/Terms">Terms and Privacy Policy</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
