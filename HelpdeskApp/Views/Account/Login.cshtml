@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="text-center mb-4">
        <img src="~/images/logo.png" alt="logo" class="img-fluid" style="max-height: 80px;" />
        <p class="text-muted">Your HelpDesk</p>
    </div>

    <form asp-action="Login" method="post" class="bg-dark p-4 rounded shadow">
        <div class="form-group mb-3">
            <label for="username" class="text-light">Username or Email</label>
            <input type="text" name="username" class="form-control bg-dark text-light border-secondary" required />
        </div>

        <div class="form-group mb-4">
            <label for="password" class="text-light">Password</label>
            <input type="password" name="password" class="form-control bg-dark text-light border-secondary" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
</div>
